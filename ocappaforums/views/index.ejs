<html>
  <head>
    <title>OCAPPA Forums</title>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.9/angular.min.js"></script>
    <script src="/javascripts/angularApp.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css"></link>

  </head>
  <body ng-app="OCAPForums">
<!-- https://thinkster.io/mean-stack-tutorial  -->


<div id="page">

  <nav ng-controller="NavCtrl">
    <ul>
      <li ng-show="isLoggedIn()"><a>{{currentUser()}}</a></li>
      <li ng-show="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
      <li ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
      <li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>
    </ul>
  </nav>


    <ui-view></ui-view>

</div>
      


    <script type="text/ng-template" id="/home.html">
      <div>
        <h1>OCAP Forums</h1>
      </div>


 


      <div ng-repeat="post in posts | orderBy:'-latestComment'">
      
      <!-- {{post.comments.length}}
      {{post.comments[post.comments.length - 1]}} -->
      {{post.latestComment}}

      <span ng-bind="latestPost"></span>
        <!-- <span ng-click="incrementLike(post)"><a href="">Like</a></span>
        -->

        <a ng-show="post.link" href="{{post.link}}">
          {{post.title}}
        </a>
        <span ng-show="post.author">
        posted by {{post.author}}
        </span>
        <span ng-hide="post.link">
          {{post.title}}
        </span>
        <span>
          <a href="#/posts/{{post._id}}">Comments</a>
        </span>
        <!-- - Likes: {{post.likes}} -->
      </div>



      <form ng-submit="addPost()" ng-show="isLoggedIn()"
        style="margin-top:30px;">
        <h3>Add a new post</h3>

        <p id="author"></p>


          <input type="text"
            placeholder="Title"
            ng-model="title"></input>
            <br />
            <textarea ng-model="content" cols="40" rows="10"></textarea>
            <br />
       
          <!-- <input type="text"
          placeholder="Link"
          ng-model="link"></input> -->
     
        <button type="submit">Post</button>
      </form>

    </div>
  </div>
    </div>


    </script>


    <script type="text/ng-template" id="/posts.html">
    
    <h3>{{post.title}}</h3>

    

    <div class="op">

    <table>
      <tr>
        <td class="author">{{post.author}}</td>
        <td><span style="white-space: pre;" ng-hide="editing" ng-bind="content"></span>

          <span ng-show="editing">

            <form ng-submit="updateOP()">
            <textarea cols="40" rows="10" ng-model="data.text"></textarea>
            <br />
            <button type="submit">Post</button>
            </form>


          </span>


        </td>
      </tr>

    </table>

      <div class="postFooter">
      {{post.date}}
        <a href="" ng-show="loggedInMatch && !editing" ng-click="editOP()">Edit</a>
      </div>


    </div>


    <div ng-repeat="comment in post.comments">
      <!-- <span ng-click="incrementLike(comment)"></span>
      {{comment.likes}} - --> 



    <div class="posts">

    <table>
      <tr>
        <td class="author">{{comment.author}}</td>
        <td><span ng-hide="editingPost.which == comment._id" style="white-space: pre;" ng-bind="comment.body" style="font-size:20px; margin-left:10px;"></span>
      <!-- {{comment.body}} -->
      




      <span ng-show="editingPost.which == comment._id">


      <form ng-submit="updateComment(comment)">

      <textarea cols="40" rows="10" ng-model="data.text"></textarea>
      <br />
      <button type="submit">Post</button>
      </span>
      </form></td>


      </tr>
    </table>



     <div class="postFooter"> {{comment.date}}
<a href="" ng-show="(comment.author === currentUser()) && !amEditingPost" ng-click="editPost(comment)">Edit</a>
</div>


      
    </div>
    </div>

    <form ng-submit="addComment()" ng-show="isLoggedIn()" style="margin-top:30px;">
    <h3>Add a new comment</h3>

    <textarea ng-model="body" cols="40" rows="10"></textarea>
    <br />
    <button type="submit">Post</button>
    </form>


    </script>

<script type="text/ng-template" id="/register.html">
  <div class="page-header">
    <h1>OCAPPA Forums</h1>
  </div>

  <div ng-show="error" class="alert alert-danger row">
    <span>{{ error.message }}</span>
  </div>

  <form ng-submit="register()"
    style="margin-top:30px;">
    <h3>Register</h3>

    <div class="form-group">
      <input type="text"
      class="form-control"
      placeholder="Username"
      ng-model="user.username"></input>
    </div>
    <div class="form-group">
      <input type="password"
      class="form-control"
      placeholder="Password"
      ng-model="user.password"></input>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
  </form>
</script>

<script type="text/ng-template" id="/login.html">
  <div class="page-header">
    <h1>OCAPPA Forums</h1>
  </div>

  <div ng-show="error" class="alert alert-danger row">
    <span>{{ error.message }}</span>
  </div>

  <form ng-submit="logIn()"
    style="margin-top:30px;">
    <h3>Log In</h3>

    <div class="form-group">
      <input type="text"
      class="form-control"
      placeholder="Username"
      ng-model="user.username"></input>
    </div>
    <div class="form-group">
      <input type="password"
      class="form-control"
      placeholder="Password"
      ng-model="user.password"></input>
    </div>
    <button type="submit" class="btn btn-primary">Log In</button>
  </form>
  </script>

  </body>
</html>